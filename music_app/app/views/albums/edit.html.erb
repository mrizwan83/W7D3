<h1>Edit <%= @album.title %> Album</h1>

<form action="<%= album_url(@album) %>" method="post">
<input type="hidden" name="_method" value="patch">

<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" >

<label for="title">Title:</label>
<input type="text" name="album[title]" id="title" value="<%= @album.title %>">

<label for="year">Year:</label>
<input type="text" name="album[year]" id="title" value="<%= @album.year %>">

<label for="album_band">Band</label>
<select name="album[band_id]" id="album_band">
  <% Band.all.each do |band| %>
    <option 
      <%= "selected" if album.band_id == band.id %>
      value="<%= band.id %>">
      <%= band.name %>
    </option>
  <% end %>
</select>



<label for="T">Live</label>
<input type="radio" name="album[live]" id="T" value="true" <%= "checked" if @album.live %>>

<label for="F">Studio</label>
<input type="radio" name="album[live]" id="F" value="false" <%= "checked" if !@album.live %>>


<input type="submit" value="Complete Edit">

</form>